<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-9 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label>name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        </div>
        <div class="form-group">
          <label>Introduction</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"Introduction", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
